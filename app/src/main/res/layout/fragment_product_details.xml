<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ProductDetailsFragment"
    tools:visibility="visible">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

      <androidx.viewpager2.widget.ViewPager2
          android:id="@+id/ViewPager2"
          android:layout_width="match_parent"
          android:layout_height="262dp"
          android:layout_marginTop="30dp"
          android:paddingStart="80dp"
          android:paddingEnd="80dp" />

      <TextView
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:fontFamily="sans-serif-thin"
          android:text="Product1"
          android:textSize="34sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/price"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:fontFamily="sans-serif-thin"
          android:text="cena"
          android:textSize="34sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/stock"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/roboto_thin"
          android:text="dostepność "
          android:textSize="20sp" />

      <LinearLayout
          android:id="@+id/ShoppingCartMain"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:visibility="gone"
          tools:visibility="visible">

         <ImageButton
             android:id="@+id/addShoppingCartHomeDetails"
             android:layout_width="10dp"
             android:layout_height="62dp"
             android:layout_marginLeft="30dp"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/baseline_add_24" />

         <TextView
             android:id="@+id/count"
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:text="0"
             android:textAlignment="center"
             android:textSize="20sp"
             android:textStyle="bold" />

         <ImageButton
             android:id="@+id/subtractShoppingCartHome"
             android:layout_width="2dp"
             android:layout_height="match_parent"
             android:layout_marginRight="30dp"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/baseline_remove_24" />

         <ImageButton
             android:id="@+id/addToShoppingCart"
             android:layout_width="6dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="40dp"
             android:layout_marginRight="30dp"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/baseline_add_shopping_cart_24" />

      </LinearLayout>

      <TextView
          android:id="@+id/description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="40dp"
          android:fontFamily="sans-serif-light"
          android:text="test"
          android:textSize="24sp" />
   </LinearLayout>
</ScrollView>

