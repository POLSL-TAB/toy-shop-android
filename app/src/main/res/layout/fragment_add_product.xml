<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ui.addProduct.addProductFragment">

    <EditText
        android:id="@+id/nameNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nazwa Produktu"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/descriptionNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Opis produktu"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/priceNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Cena"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/stockNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ilość"
        android:inputType="numberSigned" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <LinearLayout
            android:id="@+id/listImageNewProduct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageNewProduct"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/addNewImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lavender"
        android:text="Dodaj zdjęcie" />

    <Button
        android:id="@+id/addNewProductButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/lavender"
        android:text="Dodaj produkt" />
</LinearLayout>